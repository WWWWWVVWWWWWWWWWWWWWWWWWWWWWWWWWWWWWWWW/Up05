<Page x:Class="Up05.Properties.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Up05.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicesPage">

    <Grid Background="LightGray">
        <ListBox Name="ServicesListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,30,0,0" Width="400" Height="250"/>

        <Button x:Name="add" Content="Добавить услугу" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,300,0,0" Width="150" />
        <Button x:Name="remove" Content="Удалить услугу" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,300,0,0" Width="150"/>
        <Button x:Name="edit" Content="Изменить услугу" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="450,300,0,0" Width="150" />
    </Grid>
</Page>
